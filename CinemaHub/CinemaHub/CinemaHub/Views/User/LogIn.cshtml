@model CinemaHub.Models.User

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_layout2.cshtml";
}

<title>Login </title>
<div class="row mt-5">
    <div class="offset-md-4 col-md-4">
        <div class="login-circle text-center"><i class="fa fa-user-circle fa-5x"></i></div>
        <div class="login-form">
            <h4 class="text-center text-white"><b>Login</b></h4>
            <form method="post" action="~/user/login">
                <p class="text-danger">@ViewBag.errorMessage</p>
                <div class="form-group">
                    <label asp-for="email"><b>Email address</b></label>
                    <input type="text" class="form-control" name="email" value="" required />
                </div>
                <div class="form-group">
                    <label asp-for="password"><b>Password</b></label>
                    <input type="password" class="form-control" name="password" value="" required />
                </div>
                <button type="submit" class="btn btn-danger btn-block"><b>Login</b></button>
            </form>
        </div>
    </div>
</div>